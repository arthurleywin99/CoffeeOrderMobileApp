<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Chef.ChefViewOrder">

    <TextView
        android:id="@+id/a7_tablelist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/TablePending"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:layout_gravity="center"
        android:textSize="@dimen/size24sp"
        android:fontFamily="@font/bangers"
        />

    <GridView
        android:id="@+id/gvTableList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size8dp"
        android:horizontalSpacing="@dimen/size3dp"
        android:numColumns="4"
        />

</LinearLayout>