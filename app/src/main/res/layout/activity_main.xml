<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Main.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Employee"
            android:textSize="@dimen/size24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:layout_marginEnd="@dimen/size5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/size24sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/size5dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size24dp"
        android:layout_marginRight="@dimen/size24dp"
        android:text="@string/Categories"
        android:textSize="@dimen/size16sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size20dp"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginRight="@dimen/size20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOrder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="@dimen/size12dp"
            android:innerRadius="@dimen/size10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/order"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInvoice"
            android:layout_width="@dimen/size100dp"
            android:layout_height="@dimen/size100dp"
            android:elevation="@dimen/size12dp"
            android:innerRadius="@dimen/size10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/invoice"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvUserAccount"
            android:layout_width="@dimen/size100dp"
            android:layout_height="@dimen/size100dp"
            android:elevation="@dimen/size12dp"
            android:innerRadius="@dimen/size10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/user"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginRight="@dimen/size20dp">

        <TextView
            android:id="@+id/textViewOrder"
            android:layout_width="@dimen/size100dp"
            android:layout_height="wrap_content"
            android:text="@string/Order"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/textViewInvoice"
            android:layout_width="@dimen/size100dp"
            android:layout_height="wrap_content"
            android:text="@string/Invoice"
            android:textAlignment="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="@dimen/size100dp"
            android:layout_height="wrap_content"
            android:text="@string/UserInfo"
            android:textAlignment="center"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/size20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCoffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/size12dp"
                android:innerRadius="@dimen/size10dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:layout_margin="@dimen/size20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotdrink1"
                    />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSmoothie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/size12dp"
                android:innerRadius="@dimen/size10dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:layout_margin="@dimen/size20dp">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotdrink2"
                    />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>