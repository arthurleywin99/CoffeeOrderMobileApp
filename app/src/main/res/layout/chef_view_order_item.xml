<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="@dimen/size10dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivIcon_ChefViewOrderItem"
        android:layout_width="@dimen/size80dp"
        android:layout_height="@dimen/size80dp"
        android:src="@drawable/table_free"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTableName_ChefViewOrderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:layout_marginTop="@dimen/size10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/size18sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus_ChefViewOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Free"
        android:textColor="@color/primaryTextColor"
        android:textAlignment="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="@dimen/size16sp"
        />

</LinearLayout>